
#include "p16f887.inc" ; TODO INSERT INCLUDE CODE HERE

; CONFIG1
; __config 0xFFD4
 __CONFIG _CONFIG1, _FOSC_INTRC_NOCLKOUT & _WDTE_OFF & _PWRTE_OFF & _MCLRE_OFF & _CP_OFF & _CPD_OFF & _BOREN_ON & _IESO_ON & _FCMEN_ON & _LVP_ON
; CONFIG2
; __config 0xFFFF
 __CONFIG _CONFIG2, _BOR4V_BOR40V & _WRT_OFF   ; TODO INSERT CONFIG HERE


RES_VECT  CODE    0x0000            ; processor reset vector
    GOTO    START                   ; go to beginning of program

MAIN_PROG CODE                      ; let linker place main program

START
    BANKSEL ANSEL		    ; NOS MOVEMOS AL BANCO DONDE SE ENCUENTRA EL REGISTRO ANSEL
    CLRF ANSEL			    ; TODOS LOS BITS DEL REGISTRO ANSEL A CERO
    BANKSEL TRISA 
    MOVLW B'00000011'
    MOVWF TRISA
    BANKSEL TRISB
    MOVLW B'00000000'
    MOVWF TRISB
    BANKSEL PORTA

PUSH
    BTFSS PORTA,0
    GOTO PUSH2
    GOTO IZQUIERDA
PUSH2
    BTFSS PORTA,1
    GOTO PUSH
    GOTO DERECHA
    
    
IZQUIERDA
     INCF PORTB
     GOTO PUSH

DERECHA 
     DECF PORTB
     GOTO PUSH

    END
